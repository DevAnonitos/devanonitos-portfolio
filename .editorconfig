# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,json5,webmanifest}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

# Specific rules for documentation files
[{quickstart.md,README.md}]
max_line_length = off

# SVG files often have their own formatting
[*.svg]
indent_size = 2

# Batch files for Windows (keeping CRLF for compatibility if needed, but project uses LF)
[*.{bat,cmd}]
end_of_line = crlf
