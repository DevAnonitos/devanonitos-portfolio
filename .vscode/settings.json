{
  // Editor - Core
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  "editor.insertSpaces": true,
  "editor.stickyScroll.enabled": true,
  "editor.minimap.enabled": false,
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  "editor.tabCompletion": "on",
  "editor.inlineSuggest.enabled": true,

  // Editor - Aesthetics & UX
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.colorDecorators": true,
  "editor.colorDecoratorsActivatedOn": "clickAndHover",
  "editor.smoothScrolling": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.renderLineHighlight": "all",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "on",

  // Editor - Code Actions & Formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Files
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.next": true
  },

  // Explorer
  "explorer.autoReveal": true,
  "explorer.compactFolders": false,
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "next.config.js": "next-env.d.ts, next.config.mjs",
    "tailwind.config.ts": "tailwind.config.js, postcss.config.js, postcss.config.mjs",
    "*.ts": "${capture}.test.ts, ${capture}.spec.ts, ${capture}.d.ts",
    "*.tsx": "${capture}.test.tsx, ${capture}.spec.tsx",
    ".env": ".env.local, .env.development, .env.production, .env.example"
  },

  // Workbench
  "workbench.list.smoothScrolling": true,
  "workbench.editor.enablePreview": false,
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",

  // Languages - JavaScript/TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,

  // Languages - Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,

  // Terminal
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.tabs.enabled": true,

  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // Miscellaneous
  "security.workspace.trust.untrustedFiles": "open",
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true
  }
}